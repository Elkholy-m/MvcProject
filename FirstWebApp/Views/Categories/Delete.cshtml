@model Category
@{
    ViewData["Title"] = "Delete";
}
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <input asp-for="Name" hidden />
    <input asp-for="Items" hidden />
    <div class="border p-3 mb-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-action="Index" asp-controller="Categories" class="btn btn-primary m-1" style="width:150px">Back</a>
    </div>
</form>