@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div>
            <partial name="_Notification" />
        </div>
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Category
            </a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr class="table-light">
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageSrc))
                        {
                            <img id="myImg" class="img-thumbnail" style="width:48px" src ="@item.ImageSrc" />
                        }
                        else
                        {
                            <img id="myImg" class="img-thumbnail" style="width:48px" src="~/images/404-error.jpg" />
                        }
                    </td>
                    <td>
                        <a asp-controller="Categories" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-sm btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                        &nbsp;
                        <a asp-controller="Categories" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash2"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

