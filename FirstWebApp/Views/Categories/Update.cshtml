@model Category
@{
    ViewData["Title"] = "Update";
}

<form method="post" enctype="multipart/form-data">
    <div>
        <input hidden asp-for="ImgaeDB" value="@ViewBag.ImgDB"/>

    </div>
    <div class="border p-3 mb-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <input type="file" asp-for="ClientFile" onchange="fileLoad(event)" />
            <img id="myImg" src="@Model.ImageSrc" height="200" />
        </div>
        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-action="Index" asp-controller="Categories" class="btn btn-primary m-1" style="width:150px">Back</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <script>
        var fileLoad = function (event) {
            var reader = new FileReader();
            reader.onload = function(){
                var myImg = document.getElementById('myImg');
                myImg.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}

