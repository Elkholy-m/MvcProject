@model Item
@{
    ViewData["Title"] = "Delete";
}
<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mb-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId" class="mb-2"></label>
            <select asp-for="CategoryId" disabled class="form-control">
                <option value="0">Select Category</option>
                <option value="1">Computer</option>
                <option value="2">Mobile Phone</option>
                <option value="3">Electric Machiens</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-action="Index" asp-controller="Items" class="btn btn-primary m-1" style="width:150px">Back</a>
    </div>
</form>