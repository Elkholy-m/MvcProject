@model Item
@{
    ViewData["Title"] = "Edit";
}
<form  method="post" enctype="multipart/form-data">
    <div>
        <input asp-for="ImgPath" hidden/>
    </div>
    <div class="border p-3 mb-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Item</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId" class="mb-2"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.CategoriesList">
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div>
            <input type="file" asp-for="ClientFile" onchange="fileLoad(event)" />
            <img id="myImg" src="~/images/@Model.ImgPath" height="200" />
        </div>
        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-action="Index" asp-controller="Items" class="btn btn-primary m-1" style="width:150px">Back</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
    <script>
        var fileLoad = function (event){
            var reader = new FileReader();
            reader.onload = function (){
                var myImg = document.getElementById('myImg');
                myImg.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}