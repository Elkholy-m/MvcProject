@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th width="24%">ID</th>
            <th width="24%">Name</th>
            <th width="24%">Price</th>
            <th width="24%">Creation Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="24%">@item.Id</td>
                <td width="24%">@item.Name</td>
                <td width="24%">@item.Price</td>
                <td width="24%">@item.Created</td>
            </tr>
        }
    </tbody>
</table>

