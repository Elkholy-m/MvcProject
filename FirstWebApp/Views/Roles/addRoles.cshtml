﻿
@model IEnumerable<roleViewModel>

@{
    ViewData["Title"] = "addRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" >
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">User Role</h2>
                <h3>@ViewBag.userName</h3>
            </div>
        </div>

        <input type="hidden" id="userName" name="userName" value="@ViewBag.userName" />
        <input type="hidden" id="userId" name="userId" value="@ViewBag.userId" />
        <input type ="hidden" id="jsonRoles" name="jsonRoles" />

        <table id="roleTable" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        Role Id
                    </th>
                    <th scope="col">
                        Role Name
                    </th>
                    <th scope="col">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-primary">
                        <td scope="row" class="tId" width="30%">
                            @item.roleId
                        </td>
                        <td class="tName">
                            @item.roleName
                        </td>
                        <td>
                            <input type="checkbox" class="tCheck" @(item.useRole? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
    <a asp-action="Index" asp-controller="Roles" class="btn btn-primary m-1" style="width:150px">Back</a>
</form>





@section Scripts {
    <script>
        function readTableToArr(){
            var arr = [];
            $("#roleTable tbody tr").each(function (index, data) {
                const roleId = $(data).find(".tId").text();
                const roleName = $(data).find(".tName").text();
                const useRole = $(data).find(".tCheck").is(":checked");
                arr.push({
                    roleId: roleId,
                    roleName: roleName,
                    useRole: useRole
                });
            });
            return JSON.stringify(arr);
        }

        // Attach submit handler when DOM is ready
        $(function(){
            $("form").on("submit", function(){
                $("#jsonRoles").val(readTableToArr());
            });
        });
    </script>
}